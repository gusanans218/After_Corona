<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.after_corona.view.Signup2Activity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".view.Signup2Activity">


        <TextView
            android:id="@+id/signup_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/tfile_bold"
            android:textColor="#EFDA1C"
            android:text="Sign up"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="54dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />



        <TextView
            android:id="@+id/signup_nametitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="52dp"
            android:text="Name"
            android:fontFamily="@font/tfile"
            android:textColor="#EFDA1C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_name_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_namegroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:hintTextColor="#B2B2B2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_nametitle">


            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="70dp"
                android:textSize="15sp"
                android:paddingBottom="9dp"
                android:background="@drawable/signup_line"
                android:fontFamily="@font/applesdgothicm"
                android:hint="이름을 입력해주세요." />



        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:id="@+id/signup_phonenumber_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/tfile"
            android:text="Phone Number"
            android:textColor="#EFDA1C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_namegroup"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_phonenumbergroup"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:hintTextColor="#B2B2B2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_phonenumber_title">


        <EditText
            android:id="@+id/signup_phonenumbercontent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="70dp"
            android:textSize="15sp"
            android:paddingBottom="9dp"
            android:background="@drawable/signup_line"
            android:fontFamily="@font/applesdgothicm"
            android:hint="전화번호를 입력해주세요." />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_certification_send"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/background_signup_doublecheck_btn"
            android:text="전송"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/signup_phonenumber_title"
            android:layout_marginTop="30dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/signup_phonenumbergroup"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupBtn"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/background_signup_btn"
            android:fontFamily="@font/applesdgothicm"
            android:text="회원가입"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_phonenumbergroup" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_certification_ok"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/background_signup_doublecheck_btn"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/signup_phonenumber_title"
            android:layout_marginTop="30dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/signup_phonenumbergroup"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesaccount2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#00ff0000"
            android:fontFamily="@font/applesdgothicm"
            android:text="이미 계정이 있으신가요?"
            android:textColor="#767676"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signupBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>